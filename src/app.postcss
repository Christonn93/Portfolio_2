/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {

	html {
		font-family: 'Roboto', sans-serif;
	}

	section {
		padding-top: 100px;
		padding-bottom: 100px;
		box-sizing: border-box;
	}

	#about,
	#contact,
	#projects {
		background-color: #d3dce6;
	}
}

.company_logo {
	height: 75px;
}

.layout {
	display: grid;
	grid-template-rows: auto 1fr auto;
	gap: 20px;
	height: 100vh;
	width: 100%;
}
